{
    "compilerOptions": {
        "target": "ES5",
        "module": "ES6",
        "moduleResolution": "Node",
        "experimentalDecorators": true,
        "lib": ["ES2020", "DOM"]
    },
    "include": ["source/**/*"],
    "typedocOptions": {
        "name": "Strapi MobX SDK",
        "mode": "file",
        "excludeExternals": true,
        "excludeNotExported": true,
        "readme": "./ReadMe.md",
        "out": "docs/"
    }
}
